<div class="box centered w30">

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <h2>Sign up</h2>

  <hr class="shadow">

  <div class="field w30">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>

  <div class="field w30">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div class="field w30">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>

  <div class="field w30">
    <%= captcha_tag %>
    <%= f.label :captcha %>
    <%= f.text_field :captcha %>
  </div>

  <div class="actions">
    <button type="submit" class="white">Sign up</button>
  </div>

<% end %>

<%= render :partial => "devise/shared/links" %>

</div>
